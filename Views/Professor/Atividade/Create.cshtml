@{
    ViewData["Title"] = "Criar Atividade";
    var turmas = ViewBag.Turmas as List<PlataformaReforco.Models.Turma>;
    var bimestres = ViewBag.Bimestres as Array;
}

<h1>Criar Nova Atividade</h1>
<form asp-action="Create" method="post">
    <div class="form-group">
        <label for="turmaId">Turma</label>
        <select name="turmaId" class="form-control" required>
            <option value="">Selecione a turma</option>
            @foreach (var turma in turmas)
            {
                <option value="@turma.Id">@turma.Disciplina - @turma.Serie - @turma.Turno - @turma.Ano</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label for="bimestre">Bimestre</label>
        <select name="bimestre" class="form-control" required>
            <option value="">Selecione o bimestre</option>
            @foreach (var b in bimestres)
            {
                <option value="@b">@b</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label for="titulo">TÃ­tulo</label>
        <input type="text" name="titulo" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-success mt-3">Salvar</button>
    <a asp-action="Index" class="btn btn-secondary mt-3">Voltar</a>
</form> 
@{
    ViewData["Title"] = "Convidar Aluno";
    var turmas = ViewBag.Turmas as List<PlataformaReforco.Models.Turma>;
}

<h1>Convidar Novo Aluno</h1>
<form asp-action="Create" method="post">
    <div class="form-group">
        <label for="email">E-mail do Aluno</label>
        <input type="email" name="email" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="turmaId">Turma</label>
        <select name="turmaId" class="form-control" required>
            <option value="">Selecione a turma</option>
            @foreach (var turma in turmas)
            {
                <option value="@turma.Id">@turma.Disciplina - @turma.Serie - @turma.Turno - @turma.Ano</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-success mt-3">Enviar Convite</button>
    <a asp-action="Index" class="btn btn-secondary mt-3">Voltar</a>
</form> 
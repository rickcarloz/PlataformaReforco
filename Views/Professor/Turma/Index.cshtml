@model IEnumerable<PlataformaReforco.Models.Turma>
@{
    ViewData["Title"] = "Minhas Turmas";
}

<h1>Minhas Turmas</h1>
<a class="btn btn-primary mb-3" asp-action="Create">Criar Nova Turma</a>
<table class="table table-dark table-striped">
    <thead>
        <tr>
            <th>Disciplina</th>
            <th>Série</th>
            <th>Turno</th>
            <th>Ano</th>
            <th>Ativa</th>
            <th>Data de Criação</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var turma in Model)
        {
            <tr>
                <td>@turma.Disciplina</td>
                <td>@turma.Serie</td>
                <td>@turma.Turno</td>
                <td>@turma.Ano</td>
                <td>@(turma.Ativa ? "Sim" : "Não")</td>
                <td>@turma.DataCriacao.ToString("dd/MM/yyyy")</td>
            </tr>
        }
    </tbody>
</table> 
@page
@model WebUI.Pages.Alunos.ProvasModel
@{
    ViewData["Title"] = "Minhas Provas";
}

<div class="page-wrapper">
    <div class="page-content">
        <div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
            <div class="breadcrumb-title pe-3">Minhas Provas</div>
        </div>

        @if (!string.IsNullOrEmpty(Model.SuccessMessage))
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @Model.SuccessMessage
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                @Model.ErrorMessage
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <div class="card mb-4">
            <div class="card-header"><b>Provas Pendentes</b></div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>Título</th>
                                <th>Turma</th>
                                <th>Professor</th>
                                <th>Questões</th>
                                <th>Tempo (min)</th>
                                <th>Status</th>
                                <th>Ações</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.ProvasPendentes != null && Model.ProvasPendentes.Any())
                            {
                                @foreach (var prova in Model.ProvasPendentes)
                                {
                                    <tr>
                                        <td>@prova.Titulo</td>
                                        <td>@prova.TurmaNome</td>
                                        <td>@prova.ProfessorNome</td>
                                        <td>@prova.QuantidadeQuestoes</td>
                                        <td>@prova.TempoLimite</td>
                                        <td><span class="status-badge active">Disponível</span></td>
                                        <td>
                                            <button class="turmas-btn" onclick="location.href='@Url.Page("/Alunos/FazerProva", new { id = prova.ID })'">Iniciar Prova</button>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr><td colspan="7" class="text-center">Nenhuma prova pendente.</td></tr>
                            }
                        </tbody>
                    </table>
                </div>
                @if (Model.TotalPaginasPendentes > 1)
                {
                    <nav>
                        <ul class="pagination justify-content-center">
                            @for (int i = 1; i <= Model.TotalPaginasPendentes; i++)
                            {
                                <li class="page-item @(i == Model.PaginaPendentes ? "active" : "")">
                                    <a class="page-link" href="?pendentes=@i&aguardando=@Model.PaginaAguardando&avaliadas=@Model.PaginaAvaliadas">@i</a>
                                </li>
                            }
                        </ul>
                    </nav>
                }
            </div>
        </div>

        <div class="card mb-4">
            <div class="card-header"><b>Provas Concluídas - Aguardando Avaliação</b></div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>Título</th>
                                <th>Turma</th>
                                <th>Professor</th>
                                <th>Questões</th>
                                <th>Tempo (min)</th>
                                <th>Status</th>
                                <th>Ações</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.ProvasAguardandoAvaliacao != null && Model.ProvasAguardandoAvaliacao.Any())
                            {
                                @foreach (var prova in Model.ProvasAguardandoAvaliacao)
                                {
                                    <tr>
                                        <td>@prova.Titulo</td>
                                        <td>@prova.TurmaNome</td>
                                        <td>@prova.ProfessorNome</td>
                                        <td>@prova.QuantidadeQuestoes</td>
                                        <td>@prova.TempoLimite</td>
                                        <td><span class="status-badge inactive">Aguardando avaliação</span></td>
                                        <td>
                                            <span class="text-muted">Aguardando liberação do professor</span>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr><td colspan="7" class="text-center">Nenhuma prova aguardando avaliação.</td></tr>
                            }
                        </tbody>
                    </table>
                </div>
                @if (Model.TotalPaginasAguardando > 1)
                {
                    <nav>
                        <ul class="pagination justify-content-center">
                            @for (int i = 1; i <= Model.TotalPaginasAguardando; i++)
                            {
                                <li class="page-item @(i == Model.PaginaAguardando ? "active" : "")">
                                    <a class="page-link" href="?pendentes=@Model.PaginaPendentes&aguardando=@i&avaliadas=@Model.PaginaAvaliadas">@i</a>
                                </li>
                            }
                        </ul>
                    </nav>
                }
            </div>
        </div>

        <div class="card">
            <div class="card-header"><b>Provas Avaliadas</b></div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>Título</th>
                                <th>Turma</th>
                                <th>Professor</th>
                                <th>Questões</th>
                                <th>Tempo (min)</th>
                                <th>Status</th>
                                <th>Ações</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.ProvasAvaliadas != null && Model.ProvasAvaliadas.Any())
                            {
                                @foreach (var prova in Model.ProvasAvaliadas)
                                {
                                    <tr>
                                        <td>@prova.Titulo</td>
                                        <td>@prova.TurmaNome</td>
                                        <td>@prova.ProfessorNome</td>
                                        <td>@prova.QuantidadeQuestoes</td>
                                        <td>@prova.TempoLimite</td>
                                        <td><span class="status-badge active">Avaliadas</span></td>
                                        <td>
                                            @if (prova.ID != Guid.Empty)
                                            {
                                                <button class="turmas-btn" onclick="location.href='@Url.Page("/Alunos/Resultado", new { id = prova.ID })'">Ver Resultado</button>
                                                <span style="font-size:10px;color:#888;">@prova.ID</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">Resultado indisponível</span>
                                            }
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr><td colspan="7" class="text-center">Nenhuma prova avaliada.</td></tr>
                            }
                        </tbody>
                    </table>
                </div>
                @if (Model.TotalPaginasAvaliadas > 1)
                {
                    <nav>
                        <ul class="pagination justify-content-center">
                            @for (int i = 1; i <= Model.TotalPaginasAvaliadas; i++)
                            {
                                <li class="page-item @(i == Model.PaginaAvaliadas ? "active" : "")">
                                    <a class="page-link" href="?pendentes=@Model.PaginaPendentes&aguardando=@Model.PaginaAguardando&avaliadas=@i">@i</a>
                                </li>
                            }
                        </ul>
                    </nav>
                }
            </div>
        </div>
    </div>
</div> 
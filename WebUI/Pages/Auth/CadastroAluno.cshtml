@page
@model WebUI.Pages.Auth.CadastroAlunoModel
@{
    ViewData["Title"] = "Cadastro de Aluno";
}
<div class="auth-wrapper">
    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <div style="display:flex;flex-direction:column;align-items:center;">
            <div class="alert" style="background:#e6ffed;color:#008c4a;border:1px solid #008c4a55;max-width:480px;min-width:350px;">
                @Model.SuccessMessage
            </div>
            <a class="turmas-btn" href="/Auth/Login" style="margin-top:1.5rem;display:block;text-align:center;max-width:200px;">Voltar ao Login</a>
        </div>
    }
    else
    {
        <form method="post" style="max-width: 480px; min-width: 350px;">
            <h2 style="margin-bottom: 1.5rem; text-align:center; color:#008cff;">Cadastro de Aluno</h2>
            <div>
                <label asp-for="Aluno.NOME">Nome Completo</label>
                <input asp-for="Aluno.NOME" required />
            </div>
            <div>
                <label asp-for="Aluno.EMAIL">E-mail</label>
                <input asp-for="Aluno.EMAIL" type="email" required />
            </div>
            <div>
                <label asp-for="Aluno.USUARIO">Usu√°rio</label>
                <input asp-for="Aluno.USUARIO" required />
            </div>
            <button type="submit">Cadastrar</button>
            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="alert">@Model.ErrorMessage</div>
            }
            <a class="turmas-btn" href="/Auth/Login" style="margin-top:1rem;display:block;text-align:center;">Voltar ao Login</a>
        </form>
    }
</div> 
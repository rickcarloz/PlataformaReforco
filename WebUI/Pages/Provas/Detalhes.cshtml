@page
@model WebUI.Pages.Provas.DetalhesModel
@{
    ViewData["Title"] = "Detalhes da Prova";
}

<div class="page-wrapper">
    <div class="page-content">
        <div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
            <div class="breadcrumb-title pe-3">
                <a href="/Provas" class="text-decoration-none">
                    <i class="bx bx-arrow-back"></i> Voltar para Provas
                </a>
            </div>
            <div class="ps-3 ms-auto">
                <h4 class="mb-0">Detalhes da Prova</h4>
            </div>
        </div>

        @if (!string.IsNullOrEmpty(Model.SuccessMessage))
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @Model.SuccessMessage
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                @Model.ErrorMessage
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @if (Model.Prova != null)
        {
            <!-- Informações Gerais da Prova -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="bx bx-book-open"></i> @Model.Prova.Titulo
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3">
                            <strong>Turma:</strong> @Model.Prova.TurmaNome
                        </div>
                        <div class="col-md-3">
                            <strong>Professor:</strong> @Model.Prova.ProfessorNome
                        </div>
                        <div class="col-md-3">
                            <strong>Questões:</strong> @Model.Prova.QuantidadeQuestoes
                        </div>
                        <div class="col-md-3">
                            <strong>Tempo:</strong> @Model.Prova.TempoLimite min
                        </div>
                    </div>
                    <div class="row mt-2">
                        <div class="col-md-3">
                            <strong>Status:</strong>
                            <span class="status-badge @(Model.Prova.Ativa ? "active" : "inactive")">
                                @(Model.Prova.Ativa ? "Ativa" : "Inativa")
                            </span>
                        </div>
                        <div class="col-md-3">
                            <strong>Data Criação:</strong> @Model.Prova.DataCriacao.ToString("dd/MM/yyyy HH:mm")
                        </div>
                        <div class="col-md-3">
                            <strong>Alunos que fizeram:</strong> @Model.ResultadosAlunos?.Count() ?? 0
                        </div>
                        <div class="col-md-3">
                            <strong>Média Geral:</strong> @(Model.MediaGeral?.ToString("F1") ?? "N/A")
                        </div>
                    </div>
                </div>
            </div>

            <!-- Estatísticas da Prova -->
            @if (Model.ResultadosAlunos != null && Model.ResultadosAlunos.Any())
            {
                <div class="row mb-4">
                    <div class="col-md-3">
                        <div class="card bg-primary text-white">
                            <div class="card-body text-center">
                                <h3>@Model.ResultadosAlunos.Count()</h3>
                                <p class="mb-0">Total de Alunos</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card bg-success text-white">
                            <div class="card-body text-center">
                                <h3>@Model.TaxaAprovacao%</h3>
                                <p class="mb-0">Taxa de Aprovação</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card bg-info text-white">
                            <div class="card-body text-center">
                                <h3>@(Model.MediaGeral?.ToString("F1") ?? "N/A")</h3>
                                <p class="mb-0">Média Geral</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card bg-warning text-white">
                            <div class="card-body text-center">
                                <h3>@(Model.MaiorNota?.ToString("F1") ?? "N/A")</h3>
                                <p class="mb-0">Maior Nota</p>
                            </div>
                        </div>
                    </div>
                </div>
            }

            <!-- Questões da Prova -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="bx bx-list-ul"></i> Questões da Prova
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model.Questoes != null && Model.Questoes.Any())
                    {
                        @for (int i = 0; i < Model.Questoes.Count; i++)
                        {
                            var questao = Model.Questoes[i];
                            <div class="questao-item mb-4 p-3 border rounded">
                                <h6 class="mb-3">
                                    <strong>Questão @(i + 1):</strong> @questao.Enunciado
                                </h6>
                                
                                @if (questao.Alternativas != null && questao.Alternativas.Any())
                                {
                                    <div class="alternativas">
                                        @foreach (var alternativa in questao.Alternativas)
                                        {
                                            <div class="form-check mb-2">
                                                <input class="form-check-input" type="radio" disabled 
                                                       @(alternativa.Correta ? "checked" : "")>
                                                <label class="form-check-label @(alternativa.Correta ? "text-success fw-bold" : "")">
                                                    <strong>@alternativa.Letra)</strong> @alternativa.Texto
                                                    @if (alternativa.Correta)
                                                    {
                                                        <i class="bx bx-check text-success"></i>
                                                    }
                                                </label>
                                            </div>
                                        }
                                    </div>
                                }
                            </div>
                        }
                    }
                    else
                    {
                        <p class="text-center text-muted">Nenhuma questão encontrada.</p>
                    }
                </div>
            </div>

            <!-- Resultados dos Alunos -->
            @if (Model.ResultadosAlunos != null && Model.ResultadosAlunos.Any())
            {
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title mb-0">
                            <i class="bx bx-user-check"></i> Resultados dos Alunos
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th>Aluno</th>
                                        <th>Email</th>
                                        <th>Nota</th>
                                        <th>Acertos</th>
                                        <th>Tempo Gasto</th>
                                        <th>Status</th>
                                        <th>Recomendações</th>
                                        <th>Ações</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var resultado in Model.ResultadosAlunos)
                                    {
                                        <tr>
                                            <td>@resultado.AlunoNome</td>
                                            <td>@resultado.AlunoEmail</td>
                                            <td>
                                                <span class="badge @(resultado.Nota >= 7 ? "bg-success" : resultado.Nota >= 5 ? "bg-warning" : "bg-danger")">
                                                    @resultado.Nota.ToString("F1")
                                                </span>
                                            </td>
                                            <td>@resultado.Acertos / @Model.Prova.QuantidadeQuestoes</td>
                                            <td>@resultado.TempoGasto min</td>
                                            <td>
                                                <span class="badge @(resultado.Nota >= 7 ? "bg-success" : "bg-danger")">
                                                    @(resultado.Nota >= 7 ? "Aprovado" : "Reprovado")
                                                </span>
                                            </td>
                                            <td>
                                                @if (resultado.RecomendacoesLiberadas)
                                                {
                                                    <span class="badge bg-success">Liberadas</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">Pendentes</span>
                                                }
                                            </td>
                                            <td>
                                                @if (!resultado.RecomendacoesLiberadas)
                                                {
                                                    <form method="post" asp-page-handler="LiberarRecomendacoes" asp-route-provaAlunoId="@resultado.ProvaAlunoId" style="display:inline;">
                                                        <button class="btn btn-sm btn-primary" type="submit" 
                                                                onclick="return confirm('Deseja liberar as recomendações para este aluno?')">
                                                            <i class="bx bx-send"></i> Liberar Recomendações
                                                        </button>
                                                    </form>
                                                }
                                                else
                                                {
                                                    <button class="btn btn-sm btn-success" disabled>
                                                        <i class="bx bx-check"></i> Já Liberadas
                                                    </button>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="card">
                    <div class="card-body text-center">
                        <i class="bx bx-user-x" style="font-size: 3rem; color: #ccc;"></i>
                        <h5 class="mt-3">Nenhum aluno fez esta prova ainda</h5>
                        <p class="text-muted">Os resultados aparecerão aqui quando os alunos começarem a fazer a prova.</p>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="card">
                <div class="card-body text-center">
                    <i class="bx bx-error-circle" style="font-size: 3rem; color: #dc3545;"></i>
                    <h5 class="mt-3">Prova não encontrada</h5>
                    <p class="text-muted">A prova solicitada não foi encontrada ou você não tem permissão para visualizá-la.</p>
                    <a href="/Provas" class="btn btn-primary">Voltar para Provas</a>
                </div>
            </div>
        }
    </div>
</div> 